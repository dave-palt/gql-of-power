{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "node",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true,
		"types": ["@types/bun"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
}
